    }

    table {
      margin: auto;
    }

    body {
      color: #222;
      font-family: Gotham;
      font-weight: 100;
      text-align: center;
    }

    input {
      font-family: Gotham;
    }

    button {
      font-family: Gotham;
      font-weight: 200;
      padding: 10px 40px 10px 40px;
      color: #57068c;
      font-size: 20px;
      background-color: transparent;
      border: 1px solid #57068c;
      -webkit-transition-duration: 0.4s;
